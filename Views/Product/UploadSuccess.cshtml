@model ABCRetailWebApp.Models.Product
@{
    ViewData["Title"] = "Upload Success";
}

<h1>Product Uploaded Successfully!</h1>

<div class="alert alert-success">
    @TempData["Success"]
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
        <p class="card-text"><strong>Product ID:</strong> @Model.ProductId</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-3">
                <h6>Uploaded Image:</h6>
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-width: 500px;" />
                <p class="mt-2"><small>URL: @Model.ImageUrl</small></p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Upload" class="btn btn-primary">Upload Another Product</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>
</div>